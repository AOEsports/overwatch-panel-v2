{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"additionalProperties": true,
	"description": "A Player",

	"properties": {
		"name": {
			"type": "string",
			"description": "display name",
			"default": ""
		},
		"hero": {
			"type": "string",
			"description": "displayed hero",
			"default": "Reinhardt"
		},
		"role": {
			"type": "string",
			"description": "players role.",
			"enum": ["dps", "tank", "support"],
			"default": "tank"
		}
	},
	"required": ["name", "hero", "role"]
}
