{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"additionalProperties": true,
	"description": "A Team",
	"properties": {
		"name": {
			"type": "string",
			"description": "team name",
			"default": ""
		},
		"players": {
			"type": "array",
			"items": {
				"$ref": "Player.json"
			},
			"description": "players on the team",
			"default": []
		},
		"icons": {
			"type": "object",
			"description": "icons related to the team",
			"properties": {
				"teamIcon": {
					"type": "string",
					"description": "url of the teams icon",
					"default": ""
				}
			}
		},
		"colors": {
			"type": "object",
			"description": "colours related to the team",
			"properties": {
				"primary": {
					"type": "string",
					"description": "primary team color",
					"default": "",
					"format": "color"
				},
				"textColor": {
					"type": "string",
					"description": "text color",
					"default": "",
					"format": "color"
				},
				"player": {
					"type": "string",
					"description": "team player color",
					"default": "",
					"format": "color"
				},
				"shadow": {
					"type": "string",
					"description": "team shadow color",
					"default": "",
					"format": "color"
				}
			}
		}
	},
	"required": ["name", "players", "colors", "icons"]
}
